@model web_store.ViewModels.HomeViewModel


@await Html.PartialAsync("Carousel")

<div>
    <h2 class="text-center">Recommended products</h2>
    <h4 class="text-center">Our selection for you</h4>

    <div class="row">

        @foreach (var product in Model.SuggestedProducts)
        {
            @await Html.PartialAsync("SuggestedProductsSummary", product)
        }

    </div>
</div>